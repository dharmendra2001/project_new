
  
  <% if user_signed_in? && current_user.user_type.upcase == 'ADMIN'%>
  <div class="col-lg-6 mx-lg-auto card shadow mt-5">
  
      <div class="card-header">
      <h3 class="card-title text-center">Create Drive</h3>
     </div>
    <div class="card-body">
    <p class="text-white bg-dark text-center"><%=flash[:error]%></p>
    <%= form_with method: :post, url: drive_save_path do |form| %>
    
    <div class="form-group mb-2">
     <%= form.label :Date_Of_Drive %><br>
      <%= form.date_field :drive_date, class: "form-control form-control-lg"%>
    </div>

    <div class="form-group mb-2">
      <%= form.label :Role %><br>
      <%= form.text_field :role , class: "form-control form-control-lg"%>
    </div >
    
    <div>
     <%= form.submit "update", class: "btn btn-primary btn-lg"  %>
    </div>
    <% end %>
    
    </div>
    </div>
  <%end%>