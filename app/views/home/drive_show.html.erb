
<% if user_signed_in?%>
  <div class="container mt-3", style="width: 70rem;">
    <h3 class="text-danger">Welcome, <%= current_user.name.upcase%></h3>
    <table class="table table-striped table-bordered text-center bg-light">
      <tr>
        <th>Date of Drives</th>
        <th>Role</th>
      </tr>
      <% @drive_show.each do |i|%>
        <tr>
          <td><%= i.drive_date%></td>
          <td><%= i.role%></td>
        </tr>
      <%end%>
      <h6><button type="button" class="btn btn-sm btn-outline-danger"><%= link_to "Aply for drive", drive_path(@candidates)%>
      </button></h6>
    </table>
  </div>
<%end%>