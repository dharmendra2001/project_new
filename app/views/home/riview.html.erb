
  
  <% if user_signed_in? && current_user.user_type.upcase == 'INTER'%>
  <div class="col-lg-6 mx-lg-auto card shadow mt-5">
  
      <div class="card-header">
      <h3 class="card-title text-center">Riview</h3>
     </div>
    <div class="card-body">
    <p class="text-white bg-dark text-center"><%=flash[:error]%></p>
    <%= form_with model: @riview, method: :post, url: riview_update_path(@riview.id) do |form| %>
    
    <div class="form-group mb-2">
     <%= form.label :Name %><br>
      <%= form.text_field :name, class: "form-control form-control-lg"%>
    </div>

    <div class="form-group mb-2">
      <%= form.label :Riview %><br>
      <%= form.text_field :riview , class: "form-control form-control-lg"%>
    </div >
    
    <div>
     <%= form.submit "update", class: "btn btn-primary btn-lg"  %>
    </div>
    <% end %>
    
    </div>
    </div>
  <%end%>