


<br>
<div class="col-lg-6 mx-lg-auto card shadow mt-5">

     <div class="card-header">
      <h3 class="card-title text-center">Apply for drive</h3>
    </div>
  <div class="card-body">
    <%=notice%>
<%= form_with method: :post, url:fillform_path(@drives.id)  do |form| %>

  <div class="form-group mb-2">
    <%= form.label :name %><br>
    <%= form.text_field :name, placeholder: "Enter your name" ,class: "form-control form-control-lg"  %>
  </div>

  <div class="form-group mb-2">
    <%= form.label :email %><br>
     <%= form.email_field :email,  placeholder: "Enter your email" ,class: "form-control form-control-lg"%>
  </div>

  <div class="form-group mb-2">
    <%= form.label :Role %><br>
     <%= form.text_field :role,  placeholder: "Enter your role" ,class: "form-control form-control-lg"%>
  </div>

  

  <div class="form-group mb-2">
    <%= form.label :date %><br>
    <%= form.date_field :date , class: "form-control form-control-lg"%>
  </div >

  <div>
    <%= form.submit "Submit", class: "btn btn-primary btn-lg"  %>
  </div>
<% end %>
</div>
</div>



