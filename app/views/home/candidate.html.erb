
<%if user_signed_in?%>
  <h3 class="text-danger">Welcome-</h3><br>
  <div class="card border-primary mb-3" style="max-width: 18rem;">
    <div class="card-header text-center"><h3>Your Details</h3></div>
    <div class="card-body text-primary">
      <p class="text-success">
      <h5 class="card-title">Name:<p class="text-danger"><%= @candidates.name%><br></p></h5>
      <h5 class="card-title">Email:<p class="text-danger"><%= @candidates.email%><br></p></h5>
      
      <p class="card-text"></p>
      <button type="button" class="btn btn-outline-dark"><%= link_to "Aply for drive", drive_path(@candidates.id)%></button>
      <button type="button" class="btn btn-outline-success mt-2"><%= link_to "track your drive status", track_path(@candidates.id)%></button>
      <button type="button" class="btn btn-outline-danger mt-2"><%= link_to "Result", result_path(@candidates.id)%></button>
      <button type="button" class="btn btn-outline-danger mt-2"><%= link_to "all Drives", drive_show_path(@candidates)%></button>
    </div>
  </div>
<%end%>

