<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log in</p>
              
               
                  <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                
                      
                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.label :email, class: "form-label"%><br/>
                          <%= f.email_field :email, autofocus: true, placeholder: "Enter your email" , autocomplete: "email" , class:"form-control"%>
                        </div>
                      </div>
                      
                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.label :password, class: "form-label"%>
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password,  placeholder: "Enter your password" , autocomplete: "new-password" , class:"form-control"%>
                        </div>
                      </div>
                
                      <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <%= f.submit "Log in", class:"btn btn-lg btn-primary"%>
                      </div>
                    <% end %>
                
                    <%= render "users/shared/links" %>
                
                  </div>
                
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

 



